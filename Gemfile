source 'https://rubygems.org'

# Jekyll gem and GitHub Pages dependency
gem 'jekyll', '~> 4.2.0'
gem 'github-pages', group: :jekyll_plugins

# Plugins for enhancing Markdown rendering and site functionality
gem 'jekyll-toc'  # Plugin to generate a Table of Contents
gem 'jekyll-seo-tag'  # Plugin for adding SEO tags
gem 'jekyll-feed'  # Plugin for generating an RSS feed
gem 'jekyll-redirect-from'  # Plugin to handle URL redirection
